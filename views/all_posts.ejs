<%- include("partials/all_posts_header"); -%>

<% posts.forEach(function(element){ %>
<form action="/delete" method="post">
    <h1>
        <%= element.title %>
    </h1>
    
    <p>
        <%= element.content.substring(0, 100) + "..." %>
        <a href="/all_posts/<%=element._id%>" style="text-decoration: none;">Read More</a>
        <button class="botn btn btn-success" name="deleteBtn" value="<%=element._id%>" onClick="this.form.submit()"> <i
            class="fas fa-trash-alt"></i></button>
    </p>

    <% }); %>
</form>

<script>
    window.addEventListener('mouseover', initLandbot, {
        once: true
    });
    window.addEventListener('touchstart', initLandbot, {
        once: true
    });
    var myLandbot;

    function initLandbot() {
        if (!myLandbot) {
            var s = document.createElement('script');
            s.type = 'text/javascript';
            s.async = true;
            s.addEventListener('load', function () {
                var myLandbot = new Landbot.Livechat({
                    configUrl: 'https://chats.landbot.io/v3/H-950695-2V62VF8L64VLR85W/index.json',
                });
            });
            s.src = 'https://static.landbot.io/landbot-3/landbot-3.0.0.js';
            var x = document.getElementsByTagName('script')[0];
            x.parentNode.insertBefore(s, x);
        }
    }
</script>

