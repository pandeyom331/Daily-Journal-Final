    <style>
        .container::before {
            background: url("img/journal.jpg") no-repeat center center/cover;
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
            opacity: 0.25;
        }
        
        .landing {
            position: relative;
        }

        .landing-inner {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            text-align: center;
            padding-top: 50px;
        }

        .landing h1 {
            color: rgb(23, 70, 70);
            text-shadow: 0.8px 0.8px rgb(2, 129, 123);
            font-size: 50px;
        }

        .landing p {
            font-size: 20px;
        }

        .navbar-brand-img {
            width: 130px;
            height: 60px;
        }

        .countdown {
            font-size: 50px;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .countdown div {
            padding: 20px;
            border: 1px solid #fff;
            border-radius: 10px;
            margin: 5px;
            opacity: 0.7;
            background: #000;
        }

        .countdown span {
            display: block;
            font-size: 25px;
        }

        .countdown div:first-child {
            background: #17a2b8;
        }

        footer {
            position: absolute;
            text-align: center;
            width: 100%;
            background-color: #161d6f;
            color: #fff;
            bottom: 0;
        }

        .git {
            color: #fff;
            margin: 10px 10px;
        }

        .git:hover {
            color: cyan;
        }

        @media(max-width:600px) {
            .landing h1 {
                font-size: 40px;
            }

            .landing img {
                width: 70%;
            }

            .countdown {
                font-size: 30px;
                flex-direction: column;
                margin-top: 30px;
            }
        }

        .collapse {
            justify-content: flex-end;
        }
    </style>
