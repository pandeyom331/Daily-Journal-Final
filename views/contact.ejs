        <div class="contactForm">

            <form action="https://formspree.io/f/xzbyazgv" method="POST" id="my-form">
                
                <h2>Send Message</h2>
                <div class="inputBox">
                    <input autocomplete="off" type="text" placeholder="Full Name" />
                    <span>Full Name</span>
                </div>
                <div class="inputBox">
                    <input type="email" placeholder="Email" autocomplete="off" />
                    <span>Email</span>
